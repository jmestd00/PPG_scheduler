<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.DatePicker?>
<AnchorPane maxHeight="1080" maxWidth="1920" prefHeight="675.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21.0.5" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ppg.view.EditBatches">
    <VBox alignment="CENTER" layoutX="-2.0" prefHeight="675.0" prefWidth="1200.0" spacing="15.0">
        <Label text="EDITAR LOTE">
            <font>
                <Font name="Futura Medium" size="40.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="166.0" prefWidth="965.0" spacing="20.0">
            <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="125.0" spacing="15.0">
                <Label fx:id="nLoteLabel" text="Nº LOTE">
                    <font>
                        <Font size="23.0"/>
                    </font>
                </Label>
                <TextField fx:id="nBatchField" alignment="CENTER" editable="false" prefHeight="55.0" prefWidth="125.0"
                           promptText="(5)"/>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="125.0" spacing="15.0">
                <Label fx:id="pClassLabel" alignment="CENTER" text="PLANNING&#10;CLASS" textAlignment="CENTER">
                    <font>
                        <Font size="23.0" />
                    </font>
                </Label>
                <TextField fx:id="pClassField" alignment="CENTER" editable="false" prefHeight="55.0" prefWidth="150.0" promptText="(VD-WBBC)" />
            </VBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="125.0" spacing="15.0">
                <Label fx:id="plantLabel" text="PLANTA">
                    <font>
                        <Font size="23.0" />
                    </font>
                </Label>
                <TextField fx:id="plantField" alignment="CENTER" editable="false" prefHeight="55.0" prefWidth="150.0" promptText="(VDW)" />
            </VBox>
         <VBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="125.0" spacing="15.0">
            <children>
               <Label fx:id="itemLabel" text="ITEM">
                  <font>
                     <Font size="23.0" />
                  </font>
               </Label>
               <TextField fx:id="itemField" alignment="CENTER" editable="false" prefHeight="55.0" prefWidth="150.0" promptText="(A-RXX3359-DD)" />
            </children>
         </VBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="125.0" spacing="15.0">
                <Label fx:id="quantityLabel" text="CANTIDAD">
                    <font>
                        <Font size="23.0" />
                    </font>
                </Label>
                <TextField fx:id="quantityField" alignment="CENTER" editable="false" prefHeight="55.0" prefWidth="150.0" promptText="(16000)" />
            </VBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="125.0" spacing="15.0">
                <Label fx:id="iDateLabel" alignment="CENTER" text="FECHA DE&#10;INICIO&#10;" textAlignment="CENTER">
                    <font>
                        <Font size="23.0" />
                    </font>
                </Label>
            <DatePicker fx:id="startDatePicker" prefHeight="55.0" prefWidth="150.0" promptText="(14/11/2024)" styleClass="datePicker" stylesheets="@../css/editBatches.css" />
            </VBox>
         <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="125.0" spacing="15.0">
            <children>
               <Label fx:id="nDateLabel" alignment="CENTER" text="FECHA DE&#10;NECESIDAD" textAlignment="CENTER">
                  <font>
                     <Font size="23.0" />
                  </font>
               </Label>
               <TextField fx:id="needDateField" alignment="CENTER" editable="false" prefHeight="55.0" prefWidth="150.0" promptText="(30/11/2024)" />
            </children>
         </VBox>
        </HBox>
        <Pane prefHeight="112.0" prefWidth="965.0">
            <children>
                <TextArea fx:id="descriptionField" editable="false" layoutX="130.0" layoutY="14.0" prefHeight="89.0" prefWidth="940.0" promptText="Descripción">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextArea>
            </children>
        </Pane>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
            <children>
                <Button fx:id="modifyData" alignment="CENTER" mnemonicParsing="false" prefHeight="43.0" prefWidth="237.0" text="CAMBIAR DATOS">
                    <font>
                        <Font name="Roboto Light" size="20.0" />
                    </font>
                </Button>
            </children>
        </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
         <children>
            <Button fx:id="elimButton" alignment="CENTER" mnemonicParsing="false" prefHeight="48.0" prefWidth="48.0" styleClass="elimButton" stylesheets="@../css/editBatches.css">
               <font>
                  <Font name="Roboto Light" size="20.0" />
               </font>

            </Button>
         </children>
      </HBox>
    </VBox>
</AnchorPane>
